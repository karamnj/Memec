<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/launch_screen"
tools:context="com.avnet.memec.ui.activities.ConnectionSettingsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:id="@+id/head_logo">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_credential_avnetLogo"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="false"
                    android:src="@drawable/avnet_logo"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp">
                <TextView
                    android:id="@+id/ctd_gateway"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Connected to Gateway01_"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/theme_primary_highlight"/>
                <Button
                    android:id="@+id/close_activity"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:background="@drawable/cancel"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="Gateway ID"
                    android:textSize="15dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/theme_neutral_dark_grey"/>
                <TextView
                    android:id="@+id/gateway_id"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:text="Gateway01_"
                    android:textSize="14dp"
                    android:textColor="@color/theme_neutral_dark_grey"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="10dp"
                    android:background="@color/theme_neutral_light_grey"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingTop="20px">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="Number of sensors"
                    android:textSize="15dp"
                    android:layout_marginTop="-7dp"
                    android:textColor="@color/theme_neutral_dark_grey"/>
                <TextView
                    android:id="@+id/num_sensors"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="14dp"
                    android:textColor="@color/theme_neutral_dark_grey"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="10dp"
                    android:background="@color/theme_neutral_light_grey"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="20dp"
                android:background="@color/theme_neutral_light_grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="WAN Status"
                    android:textSize="15dp"
                    android:textColor="@color/theme_neutral_dark_grey"/>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/wan_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Not Connected"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="10dp"
                        android:background="@color/theme_primary_red"/>
                    <Button
                        android:id="@+id/close_connection"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:visibility="gone"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/white_cross"/>
                </FrameLayout>
            </LinearLayout>
            <Button
                android:id="@+id/wan_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WAN connection setting"
                android:textAllCaps="false"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/theme_primary_black"/>
            <Button
                android:id="@+id/connect_to_wan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect to WAN"
                android:textAllCaps="false"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/theme_primary_black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="end"
                android:text="View Sensors"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:background="@color/theme_primary_black"/>
        </LinearLayout>
    </LinearLayout>
    <!--<android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_gravity="center|end"
        app:layout_anchorGravity="bottom|right|end"
        app:backgroundTint="#FF0000"
        app:rippleColor="#FFF" />-->
</FrameLayout>