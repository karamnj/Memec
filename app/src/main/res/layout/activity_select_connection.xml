<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@drawable/launch_screen"
tools:context="com.avnet.memec.ui.activities.SelectConnectionActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="false"
        android:src="@drawable/avnet_logo"
        android:background="@android:color/transparent"
        android:layout_gravity="center_horizontal|top" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:layout_gravity="bottom">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <com.avnet.memec.ui.views.CustomFontTextView
                style="@style/clanBook"
                android:id="@+id/ctd_gateway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connection settings"
                android:textSize="18dp"
                android:paddingTop="5dp"
                android:textColor="@color/theme_primary_highlight"/>
            <com.avnet.memec.ui.views.CustomFontTextView
                style="@style/clanBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How would you like to connect to WAN?"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/theme_neutral_dark_grey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.avnet.memec.ui.views.CustomFontButton
                style="@style/clanBook"
                android:textColor="@color/white"
                android:id="@+id/wifi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="WiFi"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="@color/theme_primary_black"/>
            <com.avnet.memec.ui.views.CustomFontButton
                style="@style/clanBook"
                android:id="@+id/cellular"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cellular"
                android:textSize="16dp"
                android:textColor="@color/theme_neutral_dark_grey"
                android:textAllCaps="false"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="@color/white"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/theme_neutral_light_grey"/>
        <LinearLayout
            android:id="@+id/wifi_layout"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/ap_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <com.avnet.memec.ui.views.CustomFontButton
                    style="@style/clanBook"
                    android:textColor="@color/white"
                    android:id="@+id/ap_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Obtain Local AP Credentials"
                    android:textAllCaps="false"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:background="@color/theme_primary_black"/>
                <ProgressBar
                    android:id="@+id/apcheck_loading"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:elevation="100dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:indeterminateDrawable="@drawable/progress_interminate"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/ap_obtained"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Local AP Credentials obtained"
                    android:textColor="@color/theme_bg_dark_grey"
                    android:textAllCaps="false"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:background="@color/theme_bg_light_grey"/>
                <Button
                    android:id="@+id/close_obtained_ap"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/cancel"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <com.avnet.memec.ui.views.CustomFontTextView
                    style="@style/clanBook"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="SSID Name"
                    android:textSize="15dp"
                    android:textColor="@color/theme_neutral_dark_grey"/>
                <com.avnet.memec.ui.views.CustomFontEditText
                    style="@style/clanBook"
                    android:id="@+id/ssid_name"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:textColorHint="@color/theme_bg_dark_grey"
                    android:textColor="@color/theme_neutral_dark_grey"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/border"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <com.avnet.memec.ui.views.CustomFontTextView
                    style="@style/clanBook"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="SSID Password"
                    android:textSize="15dp"
                    android:textColor="@color/theme_neutral_dark_grey"/>
                <com.avnet.memec.ui.views.CustomFontEditText
                    style="@style/clanBook"
                    android:id="@+id/ssid_pwd"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:textColorHint="@color/theme_bg_dark_grey"
                    android:textColor="@color/theme_neutral_dark_grey"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/border"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp">
                <com.avnet.memec.ui.views.CustomFontTextView
                    style="@style/clanBook"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="Security Type"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/theme_neutral_dark_grey"/>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:prompt="@string/app_name"
                        android:textSize="14dp"
                        android:textColor="@color/theme_neutral_dark_grey"
                        android:background="@drawable/border"
                        android:spinnerMode="dropdown"
                        android:paddingLeft="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:gravity="left|center_vertical" />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/sort_down"
                        android:paddingRight="0dp"
                        android:layout_gravity="right"/>
                </FrameLayout>

                <!--<EditText
                    android:id="@+id/security_type"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:text="WPA"
                    android:textSize="14dp"
                    android:textColor="@color/theme_neutral_dark_grey"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/border"/>-->
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cellular_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="APN Name"
                    android:textSize="15dp"
                    android:textColor="@color/theme_neutral_dark_grey"/>
                <EditText
                    android:id="@+id/apn_name"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:textColorHint="@color/theme_bg_dark_grey"
                    android:textColor="@color/theme_neutral_dark_grey"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/border"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="15dp"
                    android:textColor="@color/theme_neutral_dark_grey"/>
                <EditText
                    android:id="@+id/usr_name"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:textColorHint="@color/theme_bg_dark_grey"
                    android:textColor="@color/theme_neutral_dark_grey"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/border"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="APN Password"
                    android:textSize="15dp"
                    android:textColor="@color/theme_neutral_dark_grey"/>
                <EditText
                    android:id="@+id/apn_password"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:textColorHint="@color/theme_bg_dark_grey"
                    android:textColor="@color/theme_neutral_dark_grey"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/border"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="bottom">
        <com.avnet.memec.ui.views.CustomFontButton
            style="@style/clanBook"
            android:textColor="@color/white"
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="end"
            android:text="Cancel"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:background="@color/theme_bg_dark_grey"/>
        <com.avnet.memec.ui.views.CustomFontButton
            style="@style/clanBook"
            android:textColor="@color/white"
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="end"
            android:text="Save"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:background="@color/theme_primary_black"/>
    </LinearLayout>
</LinearLayout>

</ScrollView>
    <!--<android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_gravity="center|end"
        app:layout_anchorGravity="bottom|right|end"
        app:backgroundTint="#FF0000"
        app:rippleColor="#FFF" />-->
</FrameLayout>
